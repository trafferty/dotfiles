[user]
	name = Tom Rafferty
	email = 

[color]
    diff = auto
    status = auto
    branch = auto

[core]
    editor = /usr/bin/vim
	excludesfile = /Users/traff_ss/.gitignore_global
	whitespace = cr-at-eol

[alias]
    co = checkout
    ci = commit
    st = status
    pushit = push origin HEAD
    
[difftool "sourcetree"]
	cmd = /Applications/Development/kdiff3.app/Contents/MacOS/kdiff3 \"$LOCAL\" \"$REMOTE\"
	path = 

[mergetool "sourcetree"]
	cmd = /Applications/Development/kdiff3.app/Contents/MacOS/kdiff3 \"$BASE\" \"$LOCAL\" \"$REMOTE\" -o \"$MERGED\"
	trustExitCode = true

[merge]
	tool = kdiff3

[mergetool "kdiff3"]
	path = /Applications/Development/kdiff3.app/Contents/MacOS/kdiff3